{
  "name": "@apps/nest-api",
  "type": "module",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "prettier": "@packages/prettier-common",
  "scripts": {
    "cache:clean": "rimraf .turbo",
    "install:clean": "rimraf node_modules",

    "build": "nest build",
    "build:dev": "tsc --build tsconfig.json",
    "build:dev:watch": "tsc --build tsconfig.json -w",
    "build:clean": "rimraf dist",

    "format": "prettier --write \\\"src/**/*.ts\\\" \\\"src/test/**/*.ts\\\"",
    "start": "nest start",
    "start:dev:watch": "dotenv -e .env -- nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand --config jest.config.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config src/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.1",
    "@nestjs/core": "^10.4.1",
    "@nestjs/platform-express": "^10.4.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.4",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@packages/eslint-config-common": "*",
    "@packages/prettier-common": "*",
    "@packages/test-common": "*",
    "@packages/tsconfig": "*",
    "@types/express": "^4.17.17",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.1",
    "tsconfig-paths": "^4.2.0",
    "@apps/express-api": "*"
  }
}
